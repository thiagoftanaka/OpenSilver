    <!--  controls:Expander  -->
    <Style TargetType="controls:Expander">
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:Expander">
                    <controls:Grid Background="Transparent">
                        <controls:Grid.Resources>
                            <media:LinearGradientBrush x:Key="ExpanderArrowFill"
                                                       EndPoint="0,1"
                                                       StartPoint="0,0">
                                <media:GradientStop Color="White"
                                                    Offset="0" />
                                <media:GradientStop Color="#FFBFBFBF"
                                                    Offset="0.5" />
                                <media:GradientStop Color="#FF878787"
                                                    Offset="1" />
                            </media:LinearGradientBrush>
                            <media:LinearGradientBrush x:Key="ExpanderArrowHoverFill"
                                                       EndPoint="0,1"
                                                       StartPoint="0,0">
                                <media:GradientStop Color="#FFF0F8FE"
                                                    Offset="0" />
                                <media:GradientStop Color="#FFE0F3FE"
                                                    Offset="0.3" />
                                <media:GradientStop Color="#FF6FA7C5"
                                                    Offset="1" />
                            </media:LinearGradientBrush>
                            <media:LinearGradientBrush x:Key="ExpanderArrowPressedFill"
                                                       EndPoint="0,1"
                                                       StartPoint="0,0">
                                <media:GradientStop Color="#FFDCF0FA"
                                                    Offset="0" />
                                <media:GradientStop Color="#FFC5E6F7"
                                                    Offset="0.2" />
                                <media:GradientStop Color="#FF5690D0"
                                                    Offset="1" />
                            </media:LinearGradientBrush>
                            <controls:ControlTemplate x:Key="ExpanderDownHeaderTemplate"
                                                      TargetType="primitives:ToggleButton">
                                <controls:Grid Background="Transparent">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CheckStates">
                                            <VisualStateGroup.Transitions>
                                                <VisualTransition GeneratedDuration="00:00:00" />
                                            </VisualStateGroup.Transitions>
                                            <VisualState x:Name="Checked">
                                                <animation:Storyboard>
                                                    <animation:ObjectAnimationUsingKeyFrames Duration="0"
                                                                                             animation:Storyboard.TargetName="arrow"
                                                                                             animation:Storyboard.TargetProperty="Data">
                                                        <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                                          Value="M 1,4.5 L 4.5,1 L 8,4.5" />
                                                    </animation:ObjectAnimationUsingKeyFrames>
                                                </animation:Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="Unchecked" />
                                        </VisualStateGroup>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualStateGroup.Transitions>
                                                <VisualTransition GeneratedDuration="0" />
                                                <VisualTransition GeneratedDuration="00:00:00.1"
                                                                  To="MouseOver" />
                                                <VisualTransition GeneratedDuration="00:00:00.1"
                                                                  To="Pressed" />
                                            </VisualStateGroup.Transitions>
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="MouseOver">
                                                <animation:Storyboard>
                                                    <animation:ColorAnimation BeginTime="0"
                                                                              animation:Storyboard.TargetName="circle"
                                                                              animation:Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)"
                                                                              To="#FF3C7FB1" />
                                                    <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="circle"
                                                                                             animation:Storyboard.TargetProperty="(Ellipse.Fill)">
                                                        <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                                          Value="{markup:StaticResource ExpanderArrowHoverFill}" />
                                                    </animation:ObjectAnimationUsingKeyFrames>
                                                    <animation:ColorAnimation BeginTime="0"
                                                                              animation:Storyboard.TargetName="arrow"
                                                                              animation:Storyboard.TargetProperty="(Path.Stroke).(SolidColorBrush.Color)"
                                                                              To="#222" />
                                                </animation:Storyboard>
