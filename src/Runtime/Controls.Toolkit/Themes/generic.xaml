    <!--  controls:BusyIndicator  -->
    <Style TargetType="controls:BusyIndicator">
        <Setter Property="BusyContent"
                Value="Please wait..." />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="OverlayStyle">
            <Setter.Value>
                <Style TargetType="shapes:Rectangle">
                    <Setter Property="Fill"
                            Value="White" />
                    <Setter Property="Opacity"
                            Value="0.5" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ProgressBarStyle">
            <Setter.Value>
                <Style TargetType="controls:ProgressBar">
                    <Setter Property="IsIndeterminate"
                            Value="True" />
                    <Setter Property="Height"
                            Value="15" />
                    <Setter Property="Margin"
                            Value="8,0,8,8" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="DisplayAfter"
                Value="00:00:00.1" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="VerticalAlignment"
                Value="Stretch" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:BusyIndicator">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="VisibilityStates">
                                <VisualState x:Name="Hidden">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                                 Duration="00:00:00.001"
                                                                                 animation:Storyboard.TargetName="busycontent"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                                 Duration="00:00:00.001"
                                                                                 animation:Storyboard.TargetName="overlay"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Visible">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                                 Duration="00:00:00.001"
                                                                                 animation:Storyboard.TargetName="busycontent"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                                 Duration="00:00:00.001"
                                                                                 animation:Storyboard.TargetName="overlay"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="BusyStatusStates">
                                <VisualState x:Name="Idle">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                                 Duration="00:00:00.001"
                                                                                 animation:Storyboard.TargetName="content"
                                                                                 animation:Storyboard.TargetProperty="(Control.IsEnabled)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>True</sys:Boolean>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Busy">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                                 Duration="00:00:00.001"
                                                                                 animation:Storyboard.TargetName="content"
                                                                                 animation:Storyboard.TargetProperty="(Control.IsEnabled)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <sys:Boolean>False</sys:Boolean>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:ContentControl x:Name="content"
                                                 Content="{TemplateBinding Content}"
                                                 ContentTemplate="{TemplateBinding ContentTemplate}"
                                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                        <shapes:Rectangle x:Name="overlay"
                                          Style="{TemplateBinding OverlayStyle}" />
                        <controls:ContentPresenter x:Name="busycontent"
                                                   ContentTemplate="{markup:Null}">
                            <controls:Grid HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                <controls:Border Background="White"
                                                 BorderThickness="1"
                                                 CornerRadius="2"
                                                 BorderBrush="#FF718597">
                                    <controls:Border CornerRadius="1.5"
                                                     Margin="1">
                                        <controls:Border.Background>
                                            <media:LinearGradientBrush StartPoint="0.5,0"
                                                                       EndPoint="0.5,1">
                                                <media:GradientStop Color="#FFF6F8F9"
                                                                    Offset="0.02" />
                                                <media:GradientStop Color="#FFB8B8B8"
                                                                    Offset="0.996" />
                                            </media:LinearGradientBrush>
                                        </controls:Border.Background>
                                        <controls:Grid MinWidth="150">
                                            <controls:Grid.RowDefinitions>
                                                <controls:RowDefinition />
                                                <controls:RowDefinition Height="Auto" />
                                            </controls:Grid.RowDefinitions>
                                            <controls:ContentPresenter Content="{TemplateBinding BusyContent}"
                                                                       ContentTemplate="{TemplateBinding BusyContentTemplate}"
                                                                       Margin="8" />
                                            <controls:ProgressBar controls:Grid.Row="1"
                                                                  Style="{TemplateBinding ProgressBarStyle}" />
                                        </controls:Grid>
                                    </controls:Border>
                                </controls:Border>
                            </controls:Grid>
                        </controls:ContentPresenter>
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

