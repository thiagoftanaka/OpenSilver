        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:ComboBox">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
