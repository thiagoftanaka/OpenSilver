    <!--  ProgressBar  -->
    <Style TargetType="controls:ProgressBar">
        <Setter Property="Foreground"
                Value="#FF027DB8" />
        <Setter Property="Background"
                Value="#FFD2D5D8" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Maximum"
                Value="100" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="BorderBrush"
                Value="#FF647480" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:ProgressBar">
                    <controls:Grid x:Name="Root">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Determinate" />
                                <VisualState x:Name="Indeterminate">
                                    <animation:Storyboard RepeatBehavior="Forever">
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="IndeterminateGradientFill"
                                                                   animation:Storyboard.TargetProperty="(Rectangle.Fill).(LinearGradientBrush.Transform).(TransformGroup.Children)[0].X"
                                                                   Duration="00:00:.5"
                                                                   From="0"
                                                                   To="20" />
                                        <animation:ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                 animation:Storyboard.TargetName="IndeterminateRoot"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                 animation:Storyboard.TargetName="DeterminateRoot"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <!--Default Root Visuals for either type of ProgressBar-->
                        <controls:Border Name="ProgressBarTrack"
                                         CornerRadius="3"
                                         Background="{TemplateBinding Background}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         BorderBrush="{TemplateBinding BorderBrush}" />
                        <controls:Grid x:Name="ProgressBarRootGrid">
                            <!-- Beginning of Gradient over all visuals -->
                            <controls:Border controls:Canvas.ZIndex="1"
                                             x:Name="ProgressBarRootGradient"
                                             BorderThickness="1"
                                             Margin="{TemplateBinding BorderThickness}"
                                             BorderBrush="#FFFFFFFF"
                                             CornerRadius="1.5">
                                <controls:Border.Background>
                                    <media:LinearGradientBrush StartPoint=".7,0"
                                                               EndPoint=".7,1">
                                        <media:GradientStop Color="#B2FFFFFF"
                                                            Offset="0" />
                                        <media:GradientStop Color="#C6FFFFFF"
                                                            Offset="0.15" />
                                        <media:GradientStop Color="#D1FFFFFF"
                                                            Offset="0.275" />
                                        <media:GradientStop Color="#C6FFFFFF"
                                                            Offset="0.4" />
                                        <media:GradientStop Color="#BFFFFFFF"
                                                            Offset="0.65" />
                                        <media:GradientStop Color="#A5FFFFFF"
                                                            Offset="0.75" />
                                        <media:GradientStop Color="#91FFFFFF"
                                                            Offset="0.85" />
                                        <media:GradientStop Color="#72FFFFFF"
                                                            Offset="1" />
                                    </media:LinearGradientBrush>
                                </controls:Border.Background>
                            </controls:Border>
                            <!-- Beginning of Indeterminate Progress Bar Visuals-->
                            <controls:Grid x:Name="IndeterminateRoot"
                                           Visibility="Collapsed">
                                <controls:Border x:Name="IndeterminateSolidFill"
                                                 BorderBrush="#FF448DCA"
                                                 CornerRadius="2"
                                                 BorderThickness="0"
                                                 Margin="{TemplateBinding BorderThickness}"
                                                 Background="{TemplateBinding Foreground}"
                                                 Opacity="1"
                                                 RenderTransformOrigin="0.5,0.5" />
                                <shapes:Rectangle x:Name="IndeterminateGradientFill"
                                                  RadiusX="2"
                                                  RadiusY="2"
                                                  StrokeThickness="1"
                                                  Margin="{TemplateBinding BorderThickness}"
                                                  Opacity="0.7">
                                    <shapes:Rectangle.Fill>
                                        <media:LinearGradientBrush SpreadMethod="Repeat"
                                                                   MappingMode="Absolute"
                                                                   EndPoint="0,1"
                                                                   StartPoint="20,1">
                                            <media:LinearGradientBrush.Transform>
