                                             IsHitTestVisible="false"
                                             Opacity="0"
                                             Background="#8CFFFFFF"
                                             CornerRadius="3,0,0,3" />
                        </controls:Grid>

                        <!-- TabStripPlacement Right | Selected -->
                        <controls:Grid x:Name="TemplateRightSelected"
                                       Visibility="Collapsed"
                                       controls:Canvas.ZIndex="1">
                            <controls:Border BorderBrush="{TemplateBinding BorderBrush}"
                                             BorderThickness="0,1,1,1"
                                             Background="{TemplateBinding Background}"
                                             Margin="0,-2,-2,-2"
                                             CornerRadius="0,3,3,0">
                                <controls:Border BorderThickness="1"
                                                 BorderBrush="#FFFFFFFF"
                                                 CornerRadius="0,1,1,0">
                                    <controls:Border.Background>
                                        <media:LinearGradientBrush StartPoint=".7,0"
                                                                   EndPoint=".7,1">
                                            <media:GradientStop Color="#FFFFFFFF"
                                                                Offset="0" />
                                            <media:GradientStop Color="#F9FFFFFF"
                                                                Offset="0.375" />
                                            <media:GradientStop Color="#E5FFFFFF"
                                                                Offset="0.625" />
                                            <media:GradientStop Color="#C6FFFFFF"
                                                                Offset="1" />
                                        </media:LinearGradientBrush>
                                    </controls:Border.Background>
                                    <controls:Grid>
                                        <shapes:Rectangle Fill="#FFFFFFFF"
                                                          Margin="-2,0,0,0" />
                                        <controls:ContentControl x:Name="HeaderRightSelected"
                                                                 IsTabStop="False"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 FontSize="{TemplateBinding FontSize}"
                                                                 HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                                 VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                                 Margin="{TemplateBinding Padding}"
                                                                 Cursor="{TemplateBinding Cursor}" />
                                    </controls:Grid>
                                </controls:Border>
                            </controls:Border>

                            <!--Focus Visual-->
                            <controls:Border x:Name="FocusVisualRight"
                                             CornerRadius="0,3,3,0"
                                             BorderBrush="#FF6DBDD1"
                                             BorderThickness="0,1,1,1"
                                             Margin="0,-2,-2,-2"
                                             Visibility="Collapsed"
                                             IsHitTestVisible="false" />
                            <controls:Border Margin="0,-2,-2,-2"
                                             x:Name="DisabledVisualRightSelected"
                                             IsHitTestVisible="false"
                                             Opacity="0"
                                             Background="#8CFFFFFF"
                                             CornerRadius="0,3,3,0" />
                        </controls:Grid>

                        <!-- TabStripPlacement Right + Unselected -->
                        <controls:Grid x:Name="TemplateRightUnselected"
                                       Visibility="Collapsed">
                            <controls:Border x:Name="BorderRight"
                                             BorderBrush="{TemplateBinding BorderBrush}"
                                             BorderThickness="1"
                                             Background="{TemplateBinding Background}"
                                             CornerRadius="0,3,3,0">
                                <controls:Border x:Name="GradientRight"
                                                 BorderThickness="1"
                                                 BorderBrush="#FFFFFFFF"
                                                 CornerRadius="0,1,1,0">
                                    <controls:Border.Background>
                                        <media:LinearGradientBrush StartPoint=".7,0"
                                                                   EndPoint=".7,1">
                                            <media:GradientStop Color="#FFFFFFFF"
                                                                Offset="0" />
                                            <media:GradientStop Color="#F9FFFFFF"
                                                                Offset="0.375" />
                                            <media:GradientStop Color="#E5FFFFFF"
                                                                Offset="0.625" />
                                            <media:GradientStop Color="#C6FFFFFF"
                                                                Offset="1" />
                                        </media:LinearGradientBrush>
                                    </controls:Border.Background>
                                    <controls:Grid>
                                        <controls:ContentControl x:Name="HeaderRightUnselected"
                                                                 IsTabStop="False"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 FontSize="{TemplateBinding FontSize}"
                                                                 HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                                 VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                                 Margin="{TemplateBinding Padding}"
                                                                 Cursor="{TemplateBinding Cursor}" />
                                    </controls:Grid>
                                </controls:Border>
                            </controls:Border>
                            <controls:Border x:Name="DisabledVisualRightUnSelected"
                                             IsHitTestVisible="false"
                                             Opacity="0"
                                             Background="#8CFFFFFF"
                                             CornerRadius="0,3,3,0" />
                        </controls:Grid>

                        <controls:Border x:Name="FocusVisualElement"
                                         CornerRadius="3,3,0,0"
                                         BorderBrush="#FF6DBDD1"
                                         BorderThickness="1"
                                         Margin="-1"
                                         Visibility="Collapsed"
                                         IsHitTestVisible="false" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  controls:TreeView  -->
    <Style TargetType="controls:TreeView">
        <Setter Property="Background"
                Value="#FFFFFFFF" />
        <Setter Property="Foreground"
                Value="#FF000000" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="VerticalContentAlignment"
                Value="Top" />
        <Setter Property="Cursor"
                Value="Arrow" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Padding"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="#FF000000" />
        <Setter Property="IsTabStop"
                Value="True" />
        <Setter Property="TabNavigation"
                Value="Once" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:TreeView">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                                <VisualState x:Name="Valid" />
                                <VisualState x:Name="InvalidUnfocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Validation"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="Visible" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="InvalidFocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Validation"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="Visible" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationToolTip"
                                                                                 animation:Storyboard.TargetProperty="IsOpen">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <system:Boolean>True</system:Boolean>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <controls:Border BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         CornerRadius="2">
                            <controls:Border Padding="{TemplateBinding Padding}"
                                             Background="{TemplateBinding Background}"
                                             Margin="1">
                                <controls:ScrollViewer x:Name="ScrollViewer"
                                                       HorizontalScrollBarVisibility="Auto"
                                                       VerticalScrollBarVisibility="Auto"
                                                       Background="{markup:Null}"
                                                       BorderBrush="Transparent"
                                                       BorderThickness="0"
                                                       IsTabStop="True"
                                                       TabNavigation="Once">
                                    <controls:ItemsPresenter x:Name="ItemsHost"
                                                             Margin="5" />
                                </controls:ScrollViewer>
                            </controls:Border>
                        </controls:Border>

                        <controls:Border x:Name="Validation"
                                         controls:Grid.Column="1"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         BorderBrush="#FFDB000C"
                                         CornerRadius="2"
                                         Visibility="Collapsed">
                            <controls:ToolTipService.ToolTip>
                                <controls:ToolTip x:Name="ValidationToolTip"
                                                  Template="{markup:StaticResource CommonValidationToolTipTemplate}"
                                                  Placement="Right"
                                                  PlacementTarget="{data:Binding RelativeSource={data:RelativeSource TemplatedParent}}"
                                                  DataContext="{data:Binding RelativeSource={data:RelativeSource TemplatedParent}}"
                                                  IsHitTestVisible="True" />
                            </controls:ToolTipService.ToolTip>
                            <controls:Grid Width="10"
                                           Height="10"
                                           HorizontalAlignment="Right"
                                           Margin="0,-4,-4,0"
                                           VerticalAlignment="Top"
                                           Background="Transparent">
                                <shapes:Path Margin="-1,3,0,0"
                                             Fill="#FFDC000C"
                                             Data="M 1,0 L6,0 A 2,2 90 0 1 8,2 L8,7 Z" />
                                <shapes:Path Margin="-1,3,0,0"
                                             Fill="#FFFFFFFF"
                                             Data="M 0,0 L2,0 L 8,6 L8,8" />
                            </controls:Grid>
                        </controls:Border>
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  controls:TreeViewItem  -->
    <Style TargetType="controls:TreeViewItem">
        <Setter Property="Padding"
                Value="3" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="VerticalContentAlignment"
                Value="Top" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Cursor"
                Value="Arrow" />
        <Setter Property="IsTabStop"
                Value="True" />
        <Setter Property="TabNavigation"
                Value="Once" />
        <Setter Property="Margin"
                Value="0 1 0 0" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:TreeViewItem">
                    <controls:Grid Background="{markup:Null}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Header"
                                                                                 animation:Storyboard.TargetProperty="Foreground"
                                                                                 Duration="0">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <media:SolidColorBrush Color="#FF999999" />
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected" />
                                <VisualState x:Name="Selected">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Selection"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To=".75" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="SelectedInactive">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Selection"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To=".2" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="SelectionFill"
                                                                  animation:Storyboard.TargetProperty="Color"
                                                                  Duration="0"
                                                                  To="#FF999999" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="SelectionStroke"
                                                                  animation:Storyboard.TargetProperty="Color"
                                                                  Duration="0"
                                                                  To="#FF333333" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="HasItemsStates">
                                <VisualState x:Name="HasItems" />
                                <VisualState x:Name="NoItems">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ExpanderButton"
                                                                                 animation:Storyboard.TargetProperty="Visibility"
                                                                                 Duration="0">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="Collapsed" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ExpansionStates">
                                <VisualState x:Name="Collapsed" />
                                <VisualState x:Name="Expanded">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ItemsHost"
                                                                                 animation:Storyboard.TargetProperty="Visibility"
                                                                                 Duration="0">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="Visible" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                                <VisualState x:Name="Valid" />
                                <VisualState x:Name="InvalidUnfocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Validation"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="Visible" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="InvalidFocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Validation"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="Visible" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationToolTip"
                                                                                 animation:Storyboard.TargetProperty="IsOpen">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <system:Boolean>True</system:Boolean>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:Grid.RowDefinitions>
                            <controls:RowDefinition Height="Auto" />
                            <controls:RowDefinition Height="*" />
                        </controls:Grid.RowDefinitions>
                        <controls:Grid.ColumnDefinitions>
                            <controls:ColumnDefinition Width="15" />
                            <controls:ColumnDefinition Width="Auto" />
                            <controls:ColumnDefinition Width="*" />
                        </controls:Grid.ColumnDefinitions>

                        <primitives:ToggleButton x:Name="ExpanderButton"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch"
                                                 IsTabStop="False"
                                                 TabNavigation="Once">
                            <primitives:ToggleButton.Template>
                                <controls:ControlTemplate TargetType="primitives:ToggleButton">
                                    <controls:Grid x:Name="Root"
                                                   Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="MouseOver">
                                                    <animation:Storyboard>
                                                        <animation:ColorAnimation animation:Storyboard.TargetName="UncheckedVisual"
                                                                                  animation:Storyboard.TargetProperty="(Path.Stroke).Color"
                                                                                  To="#FF1BBBFA"
                                                                                  Duration="0" />
                                                    </animation:Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Disabled">
                                                    <animation:Storyboard>
                                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                                   To=".7"
                                                                                   Duration="0" />
                                                    </animation:Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                            <VisualStateGroup x:Name="CheckStates">
                                                <VisualState x:Name="Unchecked" />
                                                <VisualState x:Name="Checked">
                                                    <animation:Storyboard>
                                                        <animation:DoubleAnimation animation:Storyboard.TargetName="UncheckedVisual"
                                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                                   To="0"
                                                                                   Duration="0" />
                                                        <animation:DoubleAnimation animation:Storyboard.TargetName="CheckedVisual"
                                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                                   To="1"
                                                                                   Duration="0" />
                                                    </animation:Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <controls:Grid HorizontalAlignment="Right"
                                                       Margin="2 2 5 2">
                                            <shapes:Path x:Name="UncheckedVisual"
                                                         Width="6"
                                                         Height="9"
                                                         Fill="#FFFFFFFF"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Right"
                                                         Data="M 0,0 L 0,9 L 5,4.5 Z"
                                                         StrokeThickness="1"
                                                         StrokeLineJoin="Miter">
                                                <shapes:Path.Stroke>
                                                    <media:SolidColorBrush Color="#FF989898" />
                                                </shapes:Path.Stroke>
                                            </shapes:Path>
                                            <shapes:Path x:Name="CheckedVisual"
                                                         Opacity="0"
                                                         Width="6"
                                                         Height="6"
                                                         Fill="#FF262626"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Data="M 6,0 L 6,6 L 0,6 Z"
                                                         StrokeLineJoin="Miter" />
                                        </controls:Grid>
                                    </controls:Grid>
                                </controls:ControlTemplate>
                            </primitives:ToggleButton.Template>
                        </primitives:ToggleButton>
                        <shapes:Rectangle x:Name="Selection"
                                          controls:Grid.Column="1"
                                          Opacity="0"
                                          StrokeThickness="1"
                                          IsHitTestVisible="False"
                                          RadiusX="2"
                                          RadiusY="2">
                            <shapes:Rectangle.Fill>
                                <media:SolidColorBrush x:Name="SelectionFill"
                                                       Color="#FFBADDE9" />
                            </shapes:Rectangle.Fill>
                            <shapes:Rectangle.Stroke>
                                <media:SolidColorBrush x:Name="SelectionStroke"
                                                       Color="#FF6DBDD1" />
                            </shapes:Rectangle.Stroke>
                        </shapes:Rectangle>
                        <controls:Button x:Name="Header"
                                         controls:Grid.Column="1"
                                         ClickMode="Hover"
                                         Background="{TemplateBinding Background}"
                                         Foreground="{TemplateBinding Foreground}"
                                         BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         Cursor="{TemplateBinding Cursor}"
                                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                         IsTabStop="False"
                                         TabNavigation="Once">
                            <controls:Button.Template>
                                <controls:ControlTemplate TargetType="controls:Button">
                                    <controls:Grid Background="{TemplateBinding Background}">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="Pressed">
                                                    <animation:Storyboard>
                                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Hover"
                                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                                   Duration="0"
                                                                                   To=".5" />
                                                    </animation:Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Disabled">
                                                    <animation:Storyboard>
                                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Content"
                                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                                   Duration="0"
                                                                                   To=".55" />
                                                    </animation:Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <shapes:Rectangle x:Name="Hover"
                                                          Opacity="0"
                                                          Fill="#FFBADDE9"
                                                          Stroke="#FF6DBDD1"
                                                          StrokeThickness="1"
                                                          IsHitTestVisible="False"
                                                          RadiusX="2"
                                                          RadiusY="2" />
                                        <controls:ContentPresenter x:Name="Content"
                                                                   Cursor="{TemplateBinding Cursor}"
                                                                   Content="{TemplateBinding Content}"
                                                                   ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                   HorizontalAlignment="Left"
                                                                   Margin="{TemplateBinding Padding}" />
                                    </controls:Grid>
                                </controls:ControlTemplate>
                            </controls:Button.Template>
                            <controls:Button.Content>
                                <controls:ContentPresenter Content="{TemplateBinding Header}"
                                                           ContentTemplate="{TemplateBinding HeaderTemplate}" />
                            </controls:Button.Content>
                        </controls:Button>

                        <controls:Border x:Name="Validation"
                                         controls:Grid.Column="1"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         BorderBrush="#FFDB000C"
                                         CornerRadius="2"
                                         Visibility="Collapsed">
                            <controls:ToolTipService.ToolTip>
                                <controls:ToolTip x:Name="ValidationToolTip"
                                                  Template="{markup:StaticResource CommonValidationToolTipTemplate}"
                                                  Placement="Right"
                                                  PlacementTarget="{data:Binding ElementName=Header}"
                                                  DataContext="{data:Binding RelativeSource={data:RelativeSource TemplatedParent}}"
                                                  IsHitTestVisible="True" />
                            </controls:ToolTipService.ToolTip>
                            <controls:Grid Width="10"
                                           Height="10"
                                           HorizontalAlignment="Right"
                                           Margin="0,-4,-4,0"
                                           VerticalAlignment="Top"
                                           Background="Transparent">
                                <shapes:Path Margin="-1,3,0,0"
                                             Fill="#FFDC000C"
                                             Data="M 1,0 L6,0 A 2,2 90 0 1 8,2 L8,7 Z" />
                                <shapes:Path Margin="-1,3,0,0"
                                             Fill="#FFFFFFFF"
                                             Data="M 0,0 L2,0 L 8,6 L8,8" />
                            </controls:Grid>
                        </controls:Border>

                        <controls:ItemsPresenter x:Name="ItemsHost"
                                                 controls:Grid.Row="1"
                                                 controls:Grid.Column="1"
                                                 controls:Grid.ColumnSpan="2"
                                                 Visibility="Collapsed" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  primitives:CalendarButton  -->
    <Style TargetType="primitives:CalendarButton">
        <Setter Property="Background"
                Value="#FFBADDE9" />
        <Setter Property="FontSize"
                Value="10" />
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="MinWidth"
                Value="40" />
        <Setter Property="MinHeight"
                Value="42" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="primitives:CalendarButton">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Background"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To=".5"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Background"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To=".5"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unselected" />
                                <VisualState x:Name="Selected">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="SelectedBackground"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To=".75"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ActiveStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Active" />
                                <VisualState x:Name="Inactive">
                                    <animation:Storyboard>
                                        <animation:ColorAnimation animation:Storyboard.TargetName="Content"
                                                                  animation:Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                                                  To="#FF777777"
                                                                  Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CalendarButtonFocusStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
