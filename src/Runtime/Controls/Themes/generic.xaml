    <!--  CommonValidationToolTipTemplate  -->
    <controls:ControlTemplate x:Key="CommonValidationToolTipTemplate"
                              TargetType="controls:ToolTip">
        <controls:Grid x:Name="Root"
                       Margin="5,0"
                       RenderTransformOrigin="0,0"
                       Opacity="0">
            <controls:Grid.RenderTransform>
                <media:TranslateTransform x:Name="Translation"
                                          X="-25" />
            </controls:Grid.RenderTransform>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="OpenStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="0" />
                        <VisualTransition To="Open"
                                          GeneratedDuration="0:0:0.2">
                            <animation:Storyboard>
                                <animation:DoubleAnimation animation:Storyboard.TargetName="Translation"
                                                           animation:Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.2">
                                    <animation:DoubleAnimation.EasingFunction>
                                        <animation:BackEase Amplitude=".3"
                                                            EasingMode="EaseOut" />
                                    </animation:DoubleAnimation.EasingFunction>
                                </animation:DoubleAnimation>
                                <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                           animation:Storyboard.TargetProperty="Opacity"
                                                           To="1"
                                                           Duration="0:0:0.2" />
                            </animation:Storyboard>
                        </VisualTransition>
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Closed">
                        <animation:Storyboard>
                            <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                       animation:Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0" />
                        </animation:Storyboard>
                    </VisualState>
                    <VisualState x:Name="Open">
                        <animation:Storyboard>
                            <animation:DoubleAnimation animation:Storyboard.TargetName="Translation"
                                                       animation:Storyboard.TargetProperty="X"
                                                       To="0"
                                                       Duration="0" />
                            <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                       animation:Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0" />
                        </animation:Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <controls:Border Margin="4,4,-4,-4"
                             Background="#052A2E31"
                             CornerRadius="5" />
            <controls:Border Margin="3,3,-3,-3"
                             Background="#152A2E31"
                             CornerRadius="4" />
            <controls:Border Margin="2,2,-2,-2"
                             Background="#252A2E31"
                             CornerRadius="3" />
            <controls:Border Margin="1,1,-1,-1"
                             Background="#352A2E31"
                             CornerRadius="2" />

            <controls:Border Background="#FFDC000C"
                             CornerRadius="2">
                <controls:TextBlock UseLayoutRounding="false"
                                    Foreground="White"
                                    Margin="8,4,8,4"
                                    MaxWidth="250"
                                    TextWrapping="Wrap"
                                    Text="{data:Binding (controls:Validation.Errors)[0].ErrorContent}" />
            </controls:Border>
        </controls:Grid>
    </controls:ControlTemplate>

    <!--  controls:Calendar  -->
    <Style TargetType="controls:Calendar">
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="Background">
            <Setter.Value>
                <media:LinearGradientBrush EndPoint="0.5,1"
                                           StartPoint="0.5,0">
                    <media:GradientStop Color="#FFD3DEE8"
                                        Offset="0" />
                    <media:GradientStop Color="#FFD3DEE8"
                                        Offset="0.16" />
                    <media:GradientStop Color="#FFFCFCFD"
                                        Offset="0.16" />
                    <media:GradientStop Color="#FFFFFFFF"
                                        Offset="1" />
                </media:LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="#FF718597" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:Calendar">
                    <controls:StackPanel x:Name="Root"
                                         HorizontalAlignment="Center">
                        <primitives:CalendarItem x:Name="CalendarItem"
                                                 Background="{TemplateBinding Background}"
                                                 BorderBrush="{TemplateBinding BorderBrush}"
                                                 BorderThickness="{TemplateBinding BorderThickness}" />
                    </controls:StackPanel>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

