    <!--  primitives:DatePickerTextBox  -->
    <Style TargetType="primitives:DatePickerTextBox">
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="primitives:DatePickerTextBox">
                    <controls:Grid x:Name="Root">
                        <controls:Grid.Resources>
                            <media:SolidColorBrush x:Key="WatermarkBrush"
                                                   Color="#FFAAAAAA" />
                        </controls:Grid.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                    <VisualTransition To="MouseOver"
                                                      GeneratedDuration="0:0:0.1" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <animation:Storyboard>
                                        <animation:ColorAnimation animation:Storyboard.TargetName="ContentElement"
                                                                  animation:Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                  Duration="0"
                                                                  To="#FF99C1E2" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="ContentElement2"
                                                                  animation:Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                  Duration="0"
                                                                  To="#FF99C1E2" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="WatermarkStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unwatermarked" />
                                <VisualState x:Name="Watermarked">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="ContentElement"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="0"
                                                                   Duration="0" />
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Watermark"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="FocusVisual"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>


                        <!--Start UI-->
                        <controls:Border x:Name="Border"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         CornerRadius="1"
                                         Opacity="1"
                                         BorderBrush="{TemplateBinding BorderBrush}">
                            <controls:Grid x:Name="WatermarkContent"
                                           Background="{TemplateBinding Background}">
                                <controls:Border x:Name="ContentElement"
                                                 Background="{TemplateBinding Background}"
                                                 BorderThickness="1"
                                                 Padding="{TemplateBinding Padding}">
                                    <controls:Border.BorderBrush>
                                        <media:SolidColorBrush Color="#FFFFFFFF" />
                                    </controls:Border.BorderBrush>
                                </controls:Border>
                                <controls:Border x:Name="ContentElement2"
                                                 BorderThickness="1">
                                    <controls:Border.BorderBrush>
                                        <media:SolidColorBrush Color="#FFFFFFFF" />
                                    </controls:Border.BorderBrush>
                                    <controls:ContentControl x:Name="Watermark"
                                                             Opacity="0"
                                                             IsTabStop="False"
                                                             IsHitTestVisible="False"
                                                             Content="{TemplateBinding Watermark}"
                                                             Foreground="{markup:StaticResource WatermarkBrush}"
                                                             FontSize="{TemplateBinding FontSize}"
                                                             Background="{TemplateBinding Background}"
                                                             HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                             HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                             VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                             Padding="2" />
                                </controls:Border>
                                <controls:Border x:Name="FocusVisual"
                                                 BorderBrush="#FF6DBDD1"
                                                 BorderThickness="{TemplateBinding BorderThickness}"
                                                 CornerRadius="1"
                                                 Opacity="0"
                                                 IsHitTestVisible="False" />
                            </controls:Grid>
                        </controls:Border>
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

