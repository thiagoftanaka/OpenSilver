                                                             Height="8"
                                                             VerticalAlignment="Center"
                                                             Opacity="0.7">
                                                    <shapes:Path.Stroke>
                                                        <media:LinearGradientBrush EndPoint="0.5,1"
                                                                                   StartPoint="0.5,0">
                                                            <media:GradientStop Color="#FF313131"
                                                                                Offset="1" />
                                                            <media:GradientStop Color="#FF8E9092"
                                                                                Offset="0" />
                                                        </media:LinearGradientBrush>
                                                    </shapes:Path.Stroke>
                                                </shapes:Path>
                                            </controls:Grid>
                                        </controls:ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls:Grid.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="WindowStates">
                                <VisualState x:Name="Open">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimationUsingKeyFrames BeginTime="0"
                                                                                 animation:Storyboard.TargetName="Overlay"
                                                                                 animation:Storyboard.TargetProperty="Opacity">
                                            <animation:EasingDoubleKeyFrame KeyTime="0"
                                                                            Value="0" />
                                            <animation:EasingDoubleKeyFrame KeyTime="00:00:00.3"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames BeginTime="0"
                                                                                 animation:Storyboard.TargetName="ContentRoot"
                                                                                 animation:Storyboard.TargetProperty="(RenderTransform).(Children)[0].ScaleX">
                                            <animation:SplineDoubleKeyFrame KeyTime="0"
                                                                            Value="0" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.25"
                                                                            Value="0" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.4"
                                                                            Value="1" />
                                            <animation:SplineDoubleKeyFrame KeySpline="0,0,0.5,1"
                                                                            KeyTime="00:00:00.45"
                                                                            Value="1.05" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.55"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames BeginTime="0"
                                                                                 animation:Storyboard.TargetName="ContentRoot"
                                                                                 animation:Storyboard.TargetProperty="(RenderTransform).(Children)[0].ScaleY">
                                            <animation:SplineDoubleKeyFrame KeyTime="0"
                                                                            Value="0" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.25"
                                                                            Value="0" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.4"
                                                                            Value="1" />
                                            <animation:SplineDoubleKeyFrame KeySpline="0,0,0.5,1"
                                                                            KeyTime="00:00:00.45"
                                                                            Value="1.05" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.55"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Closed">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimationUsingKeyFrames BeginTime="0"
                                                                                 animation:Storyboard.TargetName="Overlay"
                                                                                 animation:Storyboard.TargetProperty="Opacity">
                                            <animation:EasingDoubleKeyFrame KeyTime="0"
                                                                            Value="1" />
                                            <animation:EasingDoubleKeyFrame KeyTime="00:00:00.3"
                                                                            Value="0" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames BeginTime="0"
                                                                                 animation:Storyboard.TargetName="ContentRoot"
                                                                                 animation:Storyboard.TargetProperty="(RenderTransform).(Children)[0].ScaleX">
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.2"
                                                                            Value="1" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.25"
                                                                            Value="1.05" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.45"
                                                                            Value="0" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames BeginTime="0"
                                                                                 animation:Storyboard.TargetName="ContentRoot"
                                                                                 animation:Storyboard.TargetProperty="(RenderTransform).(Children)[0].ScaleY">
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.2"
                                                                            Value="1" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.25"
                                                                            Value="1.05" />
                                            <animation:SplineDoubleKeyFrame KeyTime="00:00:00.45"
                                                                            Value="0" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ModalStates">
                                <VisualState x:Name="Modal" />
                                <VisualState x:Name="NotModal">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Overlay"
                                                                                 animation:Storyboard.TargetProperty="Background">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="{markup:Null}" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="Overlay"
                                                                                 animation:Storyboard.TargetProperty="IsHitTestVisible">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0"
                                                                              Value="False" />
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:Grid x:Name="Overlay"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"
                                       Margin="0"
                                       Background="{TemplateBinding OverlayBrush}"
                                       Opacity="{TemplateBinding OverlayOpacity}" />
                        <controls:Grid x:Name="ContentRoot"
                                       HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                       VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                       RenderTransformOrigin="0.5,0.5"
                                       Height="{TemplateBinding Height}"
                                       Width="{TemplateBinding Width}">
                            <controls:Grid.RenderTransform>
                                <media:TransformGroup>
                                    <media:ScaleTransform />
                                    <media:SkewTransform />
                                    <media:RotateTransform />
                                    <media:TranslateTransform />
                                </media:TransformGroup>
                            </controls:Grid.RenderTransform>
                            <controls:Border BorderThickness="1"
                                             CornerRadius="2"
                                             BorderBrush="#14000000"
                                             Background="#14000000"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch"
                                             Margin="-1" />
                            <controls:Border BorderThickness="1"
                                             CornerRadius="2.25"
                                             BorderBrush="#0F000000"
                                             Background="#0F000000"
                                             HorizontalAlignment="Stretch"
                                             Margin="-2"
                                             VerticalAlignment="Stretch" />
                            <controls:Border BorderThickness="1"
                                             CornerRadius="2.5"
                                             BorderBrush="#0C000000"
                                             Background="#0C000000"
                                             HorizontalAlignment="Stretch"
                                             Margin="-3"
                                             VerticalAlignment="Stretch" />
                            <controls:Border BorderThickness="1"
                                             CornerRadius="2.75"
                                             BorderBrush="#0A000000"
                                             Background="#0A000000"
                                             HorizontalAlignment="Stretch"
                                             Margin="-4"
                                             VerticalAlignment="Stretch" />
                            <controls:Border Background="#FFFFFFFF"
                                             BorderThickness="{TemplateBinding BorderThickness}"
                                             BorderBrush="{TemplateBinding BorderBrush}"
                                             CornerRadius="2">
                                <controls:Border CornerRadius="1.5"
                                                 Margin="1">
                                    <controls:Border.Background>
                                        <media:LinearGradientBrush EndPoint="0.5,1"
                                                                   StartPoint="0.5,0">
                                            <media:GradientStop Color="#FFE5E8EB"
                                                                Offset="1" />
                                            <media:GradientStop Color="#FFF6F8F9"
                                                                Offset="0" />
                                        </media:LinearGradientBrush>
                                    </controls:Border.Background>
                                    <controls:Grid>
                                        <controls:Grid.RowDefinitions>
                                            <controls:RowDefinition Height="Auto" />
                                            <controls:RowDefinition />
                                        </controls:Grid.RowDefinitions>
                                        <controls:Border x:Name="Chrome"
                                                         Width="Auto"
                                                         BorderBrush="#FFFFFFFF"
                                                         BorderThickness="0,0,0,1">
                                            <controls:Border.Background>
                                                <media:LinearGradientBrush EndPoint="0.5,0.528"
                                                                           StartPoint="0.5,0">
                                                    <media:GradientStop Color="#FFE5E8EB"
                                                                        Offset="1" />
                                                    <media:GradientStop Color="#FFFEFEFE"
                                                                        Offset="0" />
                                                </media:LinearGradientBrush>
                                            </controls:Border.Background>
                                            <controls:Grid Height="Auto"
                                                           Width="Auto">
                                                <controls:Grid.ColumnDefinitions>
                                                    <controls:ColumnDefinition />
                                                    <controls:ColumnDefinition Width="30" />
                                                </controls:Grid.ColumnDefinitions>
                                                <controls:ContentControl Content="{TemplateBinding Title}"
                                                                         IsTabStop="False"
                                                                         FontWeight="Bold"
                                                                         HorizontalAlignment="Stretch"
                                                                         VerticalAlignment="Center"
                                                                         Margin="6,0,6,0" />
                                                <controls:Button x:Name="CloseButton"
                                                                 controls:Grid.Column="1"
                                                                 IsTabStop="False"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"
                                                                 Width="15"
                                                                 Height="14"
                                                                 Style="{markup:StaticResource ButtonStyle}" />
                                            </controls:Grid>
                                        </controls:Border>
                                        <controls:Border Background="{TemplateBinding Background}"
                                                         Margin="7"
                                                         controls:Grid.Row="1">
                                            <controls:ContentPresenter x:Name="ContentPresenter"
                                                                       Content="{TemplateBinding Content}"
                                                                       ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                        </controls:Border>
                                    </controls:Grid>
                                </controls:Border>
                            </controls:Border>
                        </controls:Grid>
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  controls:DatePicker  -->
    <Style TargetType="controls:DatePicker">
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="Background"
                Value="#FFFFFFFF" />
        <Setter Property="Padding"
                Value="2" />
        <Setter Property="SelectionBackground"
                Value="#FF444444" />
        <Setter Property="BorderBrush"
                Value="#FF718597" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:DatePicker">
                    <controls:Grid x:Name="Root">
                        <controls:Grid.Resources>
                            <!-- Main DatePicker Brushes -->
                            <media:SolidColorBrush x:Key="DisabledBrush"
                                                   Color="#8CFFFFFF" />

                            <!-- Button Template -->
                            <controls:ControlTemplate x:Key="DropDownButtonTemplate"
                                                      TargetType="controls:Button">
                                <controls:Grid FlowDirection="LeftToRight">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualStateGroup.Transitions>
                                                <VisualTransition GeneratedDuration="0" />
                                                <VisualTransition To="MouseOver"
                                                                  GeneratedDuration="0:0:0.1" />
                                                <VisualTransition To="Pressed"
                                                                  GeneratedDuration="0:0:0.1" />
                                            </VisualStateGroup.Transitions>
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="MouseOver">
                                                <animation:Storyboard>
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="Background"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                              To="#FF448DCA" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                              To="#7FFFFFFF" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                              To="#CCFFFFFF" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                              To="#F2FFFFFF" />
                                                </animation:Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="Pressed">
                                                <animation:Storyboard>
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="Background"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                              To="#FF448DCA" />
                                                    <animation:DoubleAnimation Duration="0"
                                                                               animation:Storyboard.TargetName="Highlight"
                                                                               animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                               To="1" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                              To="#EAFFFFFF" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                              To="#C6FFFFFF" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                              To="#6BFFFFFF" />
                                                    <animation:ColorAnimation Duration="0"
                                                                              animation:Storyboard.TargetName="BackgroundGradient"
                                                                              animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                              To="#F4FFFFFF" />
                                                </animation:Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="Disabled">
                                                <animation:Storyboard>
                                                    <animation:DoubleAnimation Duration="0"
                                                                               animation:Storyboard.TargetName="DisabledVisual"
                                                                               animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                               To="1" />
                                                </animation:Storyboard>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <!--Start UI-->
                                    <controls:Grid Height="18"
                                                   Width="19"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="0"
                                                   Background="#11FFFFFF">
                                        <controls:Grid.ColumnDefinitions>
                                            <controls:ColumnDefinition Width="20*" />
                                            <controls:ColumnDefinition Width="20*" />
                                            <controls:ColumnDefinition Width="20*" />
                                            <controls:ColumnDefinition Width="20*" />
                                        </controls:Grid.ColumnDefinitions>
                                        <controls:Grid.RowDefinitions>
                                            <controls:RowDefinition Height="23*" />
                                            <controls:RowDefinition Height="19*" />
                                            <controls:RowDefinition Height="19*" />
                                            <controls:RowDefinition Height="19*" />
                                        </controls:Grid.RowDefinitions>
                                        <controls:Border Margin="-1"
                                                         controls:Grid.ColumnSpan="4"
                                                         controls:Grid.Row="0"
                                                         controls:Grid.RowSpan="4"
                                                         BorderThickness="1"
                                                         BorderBrush="#FF6DBDD1"
                                                         Opacity="0"
                                                         CornerRadius="0,0,1,1"
                                                         x:Name="Highlight" />
                                        <controls:Border x:Name="Background"
                                                         Margin="0,-1,0,0"
                                                         controls:Grid.ColumnSpan="4"
                                                         controls:Grid.Row="1"
                                                         controls:Grid.RowSpan="3"
                                                         BorderThickness="1"
                                                         BorderBrush="#FFFFFFFF"
                                                         Opacity="1"
                                                         CornerRadius=".5"
                                                         Background="#FF1F3B53" />
                                        <controls:Border x:Name="BackgroundGradient"
                                                         Margin="0,-1,0,0"
                                                         controls:Grid.ColumnSpan="4"
                                                         controls:Grid.Row="1"
                                                         controls:Grid.RowSpan="3"
                                                         BorderThickness="1"
                                                         BorderBrush="#BF000000"
                                                         Opacity="1"
                                                         CornerRadius=".5">
                                            <controls:Border.Background>
                                                <media:LinearGradientBrush StartPoint=".7,0"
                                                                           EndPoint=".7,1">
                                                    <media:GradientStop Color="#FFFFFFFF"
                                                                        Offset="0" />
                                                    <media:GradientStop Color="#F9FFFFFF"
                                                                        Offset="0.375" />
                                                    <media:GradientStop Color="#E5FFFFFF"
                                                                        Offset="0.625" />
                                                    <media:GradientStop Color="#C6FFFFFF"
                                                                        Offset="1" />
                                                </media:LinearGradientBrush>
                                            </controls:Border.Background>
                                        </controls:Border>
                                        <controls:Border controls:Grid.ColumnSpan="4"
                                                         controls:Grid.RowSpan="1"
                                                         BorderThickness="1">
                                            <controls:Border.BorderBrush>
                                                <media:LinearGradientBrush EndPoint="0.48,-1"
                                                                           StartPoint="0.48,1.25">
                                                    <media:GradientStop Color="#FF494949" />
                                                    <media:GradientStop Color="#FF9F9F9F"
                                                                        Offset="1" />
                                                </media:LinearGradientBrush>
                                            </controls:Border.BorderBrush>
                                            <controls:Border.Background>
                                                <media:LinearGradientBrush EndPoint="0.3,-1.1"
                                                                           StartPoint="0.46,1.6">
                                                    <media:GradientStop Color="#FF4084BD" />
                                                    <media:GradientStop Color="#FFAFCFEA"
                                                                        Offset="1" />
                                                </media:LinearGradientBrush>
                                            </controls:Border.Background>
                                        </controls:Border>
                                        <shapes:Path HorizontalAlignment="Center"
                                                     Margin="4,3,4,3"
                                                     VerticalAlignment="Center"
                                                     RenderTransformOrigin="0.5,0.5"
                                                     controls:Grid.Column="0"
                                                     controls:Grid.Row="1"
                                                     Fill="#FF2F2F2F"
                                                     Stretch="Fill"
                                                     Data="M11.426758,8.4305077 L11.749023,8.4305077 L11.749023,16.331387 L10.674805,16.331387 L10.674805,10.299648 L9.0742188,11.298672 L9.0742188,10.294277 C9.4788408,10.090176 9.9094238,9.8090878 10.365967,9.4510155 C10.82251,9.0929432 11.176106,8.7527733 11.426758,8.4305077 z M14.65086,8.4305077 L18.566387,8.4305077 L18.566387,9.3435936 L15.671368,9.3435936 L15.671368,11.255703 C15.936341,11.058764 16.27293,10.960293 16.681133,10.960293 C17.411602,10.960293 17.969301,11.178717 18.354229,11.615566 C18.739157,12.052416 18.931622,12.673672 18.931622,13.479336 C18.931622,15.452317 18.052553,16.438808 16.294415,16.438808 C15.560365,16.438808 14.951641,16.234707 14.468243,15.826504 L14.881817,14.929531 C15.368796,15.326992 15.837872,15.525723 16.289043,15.525723 C17.298809,15.525723 17.803692,14.895514 17.803692,13.635098 C17.803692,12.460618 17.305971,11.873379 16.310528,11.873379 C15.83071,11.873379 15.399232,12.079271 15.016094,12.491055 L14.65086,12.238613 z"
                                                     controls:Grid.ColumnSpan="4"
                                                     controls:Grid.RowSpan="3" />
                                        <controls:Border HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Background="#FFFFFFFF"
                                                         BorderThickness="0"
                                                         controls:Grid.ColumnSpan="4"
                                                         Width="3"
                                                         Height="3"
                                                         CornerRadius="3" />
                                        <controls:Border controls:Grid.ColumnSpan="4"
                                                         controls:Grid.Row="0"
                                                         controls:Grid.RowSpan="4"
                                                         BorderThickness="1"
                                                         BorderBrush="#B2FFFFFF"
                                                         Opacity="0"
                                                         CornerRadius="0,0,.5,.5"
                                                         x:Name="DisabledVisual" />
                                    </controls:Grid>
                                    <!--End UI-->
                                </controls:Grid>
                            </controls:ControlTemplate>
                        </controls:Grid.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="DisabledVisual"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                                <VisualState x:Name="Valid" />
                                <VisualState x:Name="InvalidUnfocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationErrorElement"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="InvalidFocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationErrorElement"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="validationTooltip"
                                                                                 animation:Storyboard.TargetProperty="IsOpen">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <system:Boolean>True</system:Boolean>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:Grid.ColumnDefinitions>
                            <controls:ColumnDefinition Width="*" />
                            <controls:ColumnDefinition Width="Auto" />
                        </controls:Grid.ColumnDefinitions>
                        <primitives:DatePickerTextBox x:Name="TextBox"
                                                      SelectionBackground="{TemplateBinding SelectionBackground}"
                                                      Background="{TemplateBinding Background}"
                                                      BorderBrush="{TemplateBinding BorderBrush}"
                                                      BorderThickness="{TemplateBinding BorderThickness}"
                                                      Padding="{TemplateBinding Padding}"
                                                      controls:Grid.Column="0" />
                        <controls:Border x:Name="ValidationErrorElement"
                                         controls:Grid.Column="0"
                                         BorderThickness="1"
                                         CornerRadius="1"
                                         BorderBrush="#FFDB000C"
                                         Visibility="Collapsed">
                            <controls:ToolTipService.ToolTip>
                                <controls:ToolTip x:Name="validationTooltip"
                                                  Template="{markup:StaticResource CommonValidationToolTipTemplate}"
                                                  Placement="Right"
                                                  PlacementTarget="{data:Binding ElementName=TextBox}"
                                                  DataContext="{data:Binding RelativeSource={data:RelativeSource TemplatedParent}}">
                                    <controls:ToolTip.Triggers>
                                        <EventTrigger RoutedEvent="Canvas.Loaded">
                                            <EventTrigger.Actions>
                                                <animation:BeginStoryboard>
                                                    <animation:Storyboard>
                                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="validationTooltip"
                                                                                                 animation:Storyboard.TargetProperty="IsHitTestVisible">
                                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                                <animation:DiscreteObjectKeyFrame.Value>
                                                                    <system:Boolean>true</system:Boolean>
                                                                </animation:DiscreteObjectKeyFrame.Value>
                                                            </animation:DiscreteObjectKeyFrame>
                                                        </animation:ObjectAnimationUsingKeyFrames>
                                                    </animation:Storyboard>
                                                </animation:BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </controls:ToolTip.Triggers>
                                </controls:ToolTip>
                            </controls:ToolTipService.ToolTip>
                            <controls:Grid Width="12"
                                           Height="12"
                                           HorizontalAlignment="Right"
                                           Margin="1,-4,-4,0"
                                           VerticalAlignment="Top"
                                           Background="Transparent">
                                <shapes:Path Margin="1,3,0,0"
                                             Data="M 1,0 L6,0 A 2,2 90 0 1 8,2 L8,7 z"
                                             Fill="#FFDC000C" />
                                <shapes:Path Margin="1,3,0,0"
                                             Data="M 0,0 L2,0 L 8,6 L8,8"
                                             Fill="#FFFFFF" />
                            </controls:Grid>
                        </controls:Border>
                        <controls:Button x:Name="Button"
                                         Template="{markup:StaticResource DropDownButtonTemplate}"
                                         controls:Grid.Column="1"
                                         Width="20"
                                         Foreground="{TemplateBinding Foreground}"
                                         BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         Margin="2,0,2,0" />
                        <controls:Grid x:Name="DisabledVisual"
                                       Opacity="0"
                                       IsHitTestVisible="False"
                                       controls:Grid.ColumnSpan="2">
                            <controls:Grid.ColumnDefinitions>
                                <controls:ColumnDefinition Width="*" />
                                <controls:ColumnDefinition Width="Auto" />
                            </controls:Grid.ColumnDefinitions>
                            <controls:Border CornerRadius="1"
                                             Background="#8CFFFFFF" />
                            <controls:Border CornerRadius="1"
                                             Background="#8CFFFFFF"
                                             controls:Grid.Column="1"
                                             Height="18"
                                             Width="19"
                                             Margin="2,0,2,0" />
                        </controls:Grid>
                        <primitives:Popup x:Name="Popup" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  controls:GridSplitter  -->
    <Style TargetType="controls:GridSplitter">
        <Setter Property="Background"
                Value="#FFFFFFFF" />
        <Setter Property="IsTabStop"
                Value="true" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="PreviewStyle">
            <Setter.Value>
                <Style TargetType="controls:Control">
                    <Setter Property="Background"
                            Value="#FF868686" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <controls:ControlTemplate TargetType="controls:Control">
                                <controls:Grid x:Name="Root"
                                               Opacity=".5">

                                    <!-- Background -->
                                    <controls:Border Background="{TemplateBinding Background}" />

                                    <!-- Horizontal Template -->
                                    <controls:Grid x:Name="HorizontalTemplate"
                                                   Height="6">
                                        <!-- Just show the faint gray grid splitter rectangle with no other details -->
                                    </controls:Grid>

                                    <!-- Vertical Template -->
                                    <controls:Grid x:Name="VerticalTemplate"
                                                   Visibility="Collapsed"
                                                   Width="6">
                                        <!-- Just show the faint gray grid splitter rectangle with no other details -->
                                    </controls:Grid>

                                </controls:Grid>
                            </controls:ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:GridSplitter">
                    <controls:Grid x:Name="Root"
                                   IsHitTestVisible="{TemplateBinding IsEnabled}">

                        <!-- VSM -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="0.5"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="FocusVisual"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1"
                                                                   Duration="0" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Background -->
                        <controls:Border Background="{TemplateBinding Background}"
                                         BorderThickness="0" />

                        <!-- Horizontal Template -->
                        <controls:Grid x:Name="HorizontalTemplate"
                                       Height="10">
                            <controls:StackPanel Height="6"
                                                 VerticalAlignment="Center">
                                <controls:Border Height="1"
                                                 Margin="1"
                                                 Width="10"
                                                 BorderThickness="0"
                                                 Background="#FF868686" />
                                <controls:Border Height="1"
                                                 Margin="1"
                                                 Width="10"
                                                 BorderThickness="0"
                                                 Background="#FF868686" />
                            </controls:StackPanel>
                        </controls:Grid>

                        <!-- Vertical Template -->
                        <controls:Grid x:Name="VerticalTemplate"
                                       Visibility="Collapsed"
                                       Width="10">
                            <controls:StackPanel Width="6"
                                                 VerticalAlignment="Center"
                                                 Orientation="Horizontal">
                                <controls:Border Width="1"
                                                 Margin="1"
                                                 Height="10"
                                                 BorderThickness="0"
                                                 Background="#FF868686" />
                                <controls:Border Width="1"
                                                 Margin="1"
                                                 Height="10"
                                                 BorderThickness="0"
                                                 Background="#FF868686" />
                            </controls:StackPanel>
                        </controls:Grid>

                        <!-- Focus Visual -->
                        <controls:Border x:Name="FocusVisual"
                                         BorderBrush="#FF6DBDD1"
                                         BorderThickness="1"
                                         Opacity="0"
                                         IsHitTestVisible="false" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  controls:HeaderedItemsControl  -->
    <Style TargetType="controls:HeaderedItemsControl">
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:HeaderedItemsControl">
                    <controls:Grid x:Name="Root">
                        <controls:Grid.RowDefinitions>
                            <controls:RowDefinition Height="Auto" />
                            <controls:RowDefinition Height="*" />
                        </controls:Grid.RowDefinitions>
                        <controls:ContentControl x:Name="HeaderContent"
                                                 Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}" />
                        <controls:ItemsPresenter x:Name="Items"
                                                 controls:Grid.Row="1" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  controls:TabControl  -->
    <Style TargetType="controls:TabControl">
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="Background">
            <Setter.Value>
                <media:LinearGradientBrush EndPoint="0.5,1"
                                           StartPoint="0.5,0">
                    <media:GradientStop Color="#FFFFFFFF"
                                        Offset="0" />
                    <media:GradientStop Color="#FFFEFEFE"
                                        Offset="1" />
                </media:LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush"
                Value="#FF718597" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Padding"
                Value="5" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:TabControl">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimationUsingKeyFrames animation:Storyboard.TargetName="DisabledVisualTop"
                                                                                 animation:Storyboard.TargetProperty="Opacity">
                                            <animation:SplineDoubleKeyFrame KeyTime="0"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames animation:Storyboard.TargetName="DisabledVisualBottom"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Opacity)">
                                            <animation:SplineDoubleKeyFrame KeyTime="0"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames animation:Storyboard.TargetName="DisabledVisualLeft"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Opacity)">
                                            <animation:SplineDoubleKeyFrame KeyTime="0"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                        <animation:DoubleAnimationUsingKeyFrames animation:Storyboard.TargetName="DisabledVisualRight"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Opacity)">
                                            <animation:SplineDoubleKeyFrame KeyTime="0"
                                                                            Value="1" />
                                        </animation:DoubleAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- TabStripPlacement Top -->
                        <controls:Grid x:Name="TemplateTop"
                                       Visibility="Collapsed">
                            <controls:Grid.RowDefinitions>
                                <controls:RowDefinition Height="Auto" />
                                <controls:RowDefinition Height="*" />
                            </controls:Grid.RowDefinitions>

                            <primitives:TabPanel x:Name="TabPanelTop"
                                                 controls:Canvas.ZIndex="1"
                                                 Margin="2,2,2,-1" />

                            <controls:Border BorderBrush="{TemplateBinding BorderBrush}"
                                             BorderThickness="{TemplateBinding BorderThickness}"
                                             Background="{TemplateBinding Background}"
                                             controls:Grid.Row="1"
                                             MinHeight="10"
                                             MinWidth="10"
                                             CornerRadius="0,0,3,3">

                                <controls:ContentPresenter x:Name="ContentTop"
                                                           Content="{markup:Null}"
                                                           ContentTemplate="{markup:Null}"
                                                           HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                           VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                           Margin="{TemplateBinding Padding}"
                                                           Cursor="{TemplateBinding Cursor}" />
                            </controls:Border>
                            <controls:Border x:Name="DisabledVisualTop"
                                             IsHitTestVisible="False"
                                             Opacity="0"
                                             controls:Canvas.ZIndex="1"
                                             Background="#8CFFFFFF"
                                             controls:Grid.RowSpan="2"
                                             CornerRadius="0,0,3,3"
                                             controls:Grid.Row="1" />
                        </controls:Grid>

                        <!-- TabStripPlacement Bottom -->
                        <controls:Grid x:Name="TemplateBottom"
                                       Visibility="Collapsed">
                            <controls:Grid.RowDefinitions>
                                <controls:RowDefinition Height="*" />
                                <controls:RowDefinition Height="Auto" />
                            </controls:Grid.RowDefinitions>

                            <primitives:TabPanel x:Name="TabPanelBottom"
                                                 controls:Canvas.ZIndex="1"
                                                 controls:Grid.Row="1"
                                                 Margin="2,-1,2,2" />

                            <controls:Border BorderBrush="{TemplateBinding BorderBrush}"
                                             BorderThickness="{TemplateBinding BorderThickness}"
                                             Background="{TemplateBinding Background}"
                                             MinHeight="10"
                                             MinWidth="10"
                                             CornerRadius="3,3,0,0">

                                <controls:ContentPresenter x:Name="ContentBottom"
                                                           Content="{markup:Null}"
                                                           ContentTemplate="{markup:Null}"
                                                           HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                           VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                           Margin="{TemplateBinding Padding}"
                                                           Cursor="{TemplateBinding Cursor}" />
                            </controls:Border>
                            <controls:Border x:Name="DisabledVisualBottom"
                                             IsHitTestVisible="False"
                                             Opacity="0"
                                             controls:Canvas.ZIndex="1"
                                             Background="#8CFFFFFF"
                                             CornerRadius="3,3,0,0" />
                        </controls:Grid>

                        <!-- TabStripPlacement Left -->
                        <controls:Grid x:Name="TemplateLeft"
